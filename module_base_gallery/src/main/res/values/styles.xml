<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ModuleBaseGalleryAppTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="ModuleBaseGalleryAppTheme.NoActionBar" tools:ignore="ResourceName">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ModuleBaseGalleryAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ModuleBaseGalleryAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- dialog -->
    <style name="ModuleBaseGalleryAppTheme.dialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="background">@null</item>
        <item name="windowNoTitle">true</item>

    </style>
</resources>